            <main class="product-listing " data-category data-product-item-container>
                <!-- snippet location categories -->
                <header class="product-listing-header view-grid">
                    <br>
                    <div class="product-listing-sort-module">
                        <span class="product-listing-sort-module-label">Sort:</span>

                        <form class="form product-listing-sort-module-form" method="get">
                            <label class="form-label form-select-wrapper" for="sort">
                                <select class="form-select" name="sort" id="sort">

                                    <option value="featured" selected>Featured</option>
                                    <option value="newest">Newest</option>
                                    <option value="bestselling">Popular</option>
                                    <option value="alphaasc">A-Z</option>
                                    <option value="alphadesc">Z-A</option>
                                    <option value="avgcustomerreview">Rating</option>
                                    <option value="priceasc">Price Low to High</option>
                                    <option value="pricedesc">Price High to Low</option>
                                </select>
                            </label>
                        </form>
                    </div>

