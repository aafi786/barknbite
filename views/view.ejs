<% extend('layout') %>
<div class="main-content-wrapper" data-main-content-wrapper>
    <header class="page-header-wrapper">
        <div class="container">
            <div class="page-header">
                <div class="breadcrumbs-wrapper">
                    <div class="breadcrumbs">
                        <a href="http://soho-classic-demo.mybigcommerce.com/">Home</a> <span class="divider">/</span>
                        <span class="breadcrumbs-current">
                            <%= type %>
                        </span>
                    </div>
                </div>

                <h1 class="page-title">
                    <%= type %>
                </h1>
            </div>
        </div>
    </header>

    <div class="container">

